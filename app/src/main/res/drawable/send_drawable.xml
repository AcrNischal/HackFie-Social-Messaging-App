<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- Bubble Layer with Gradient -->
    <item android:right="2dp" android:left="2dp" android:top="4dp">
        <shape>
            <gradient
                android:startColor="#1E3FFA"
                android:centerColor="#0877CF"
                android:endColor="#C700EA"
                android:angle="45"/>
            <corners
                android:bottomLeftRadius="20dp"
                android:topRightRadius="20dp"
                android:topLeftRadius="20dp"/>
        </shape>
    </item>

</layer-list>
