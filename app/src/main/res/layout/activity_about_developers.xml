<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        app:title="App Developers"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/toolbarBackgroundColor"
        android:navigationContentDescription="Back to HackFie"
        android:padding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        app:titleTextColor="@color/black" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:fadeScrollbars="true"
        android:padding="16dp">


        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Top bar layout with social icons -->

            <!-- Developer Card Layout -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="1dp"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:contentDescription="Nishchal Acharya"
                        android:scaleType="centerCrop"
                        android:src="@drawable/user" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/poppinsbold"
                        android:text="Nishchal Acharya"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/poppinsregular"
                        android:padding="8dp"
                        android:text="Nishchal is a passionate software developer with over 2 years of experience in mobile app development. He loves to work on innovative projects and is always eager to learn new technologies."
                        android:textAlignment="center" />

                    <!-- Social icons for Nishchal -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/nishchal_facebook"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:contentDescription="@string/facebook_icon"
                            android:padding="8dp"
                            android:src="@drawable/ic_portfolio" />

                        <ImageView
                            android:id="@+id/nishchal_twitter"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:contentDescription="@string/twitter_icon"
                            android:padding="8dp"
                            android:src="@drawable/ic_twitter" />

                        <ImageView
                            android:id="@+id/nishchal_linkedin"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:contentDescription="@string/linkedin_icon"
                            android:padding="8dp"
                            android:src="@drawable/ic_linkedin" />

                        <ImageView
                            android:id="@+id/nishchal_github"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:contentDescription="@string/instagram_icon"
                            android:padding="8dp"
                            android:src="@drawable/ic_github" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Repeat similar card for Sahil Acharya and Anish Niraula -->

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:contentDescription="Sahil Acharya"
                        android:scaleType="centerCrop"
                        android:src="@drawable/dev_sahil" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/poppinsbold"
                        android:text="Sahil Acharya"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/poppinsregular"
                        android:padding="8dp"
                        android:text="Sahil is a skilled backend developer who excels in creating robust and scalable server-side applications. With a strong background in computer science, he is an expert in database management and API development."
                        android:textAlignment="center" />

                    <!-- Social icons for Sahil -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/sahil_facebook"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:contentDescription="@string/facebook_icon"
                            android:padding="8dp"
                            android:src="@drawable/ic_portfolio" />

                        <ImageView
                            android:id="@+id/sahil_twitter"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:contentDescription="@string/twitter_icon"
                            android:padding="8dp"
                            android:src="@drawable/ic_twitter" />

                        <ImageView
                            android:id="@+id/sahil_linkedin"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:contentDescription="@string/linkedin_icon"
                            android:padding="8dp"
                            android:src="@drawable/ic_linkedin" />

                        <ImageView
                            android:id="@+id/sahil_github"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:contentDescription="@string/instagram_icon"
                            android:padding="8dp"
                            android:src="@drawable/ic_github" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="1dp"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:contentDescription="Anish Niraula"
                        android:scaleType="centerCrop"
                        android:src="@drawable/dev_anish" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/poppinsbold"
                        android:text="Anish Niraula"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/poppinsregular"
                        android:padding="8dp"
                        android:text="Anish is a versatile front-end developer with a knack for creating intuitive and engaging user interfaces. He has a keen eye for design and is always up-to-date with the latest trends in web development."
                        android:textAlignment="center" />

                    <!-- Social icons for Anish -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/anish_facebook"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:contentDescription="@string/facebook_icon"
                            android:padding="8dp"
                            android:src="@drawable/ic_portfolio" />

                        <ImageView
                            android:id="@+id/anish_twitter"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:contentDescription="@string/twitter_icon"
                            android:padding="8dp"
                            android:src="@drawable/ic_twitter" />

                        <ImageView
                            android:id="@+id/anish_linkedin"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:contentDescription="@string/linkedin_icon"
                            android:padding="8dp"
                            android:src="@drawable/ic_linkedin" />

                        <ImageView
                            android:id="@+id/anish_github"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:contentDescription="@string/instagram_icon"
                            android:padding="8dp"
                            android:src="@drawable/ic_github" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
